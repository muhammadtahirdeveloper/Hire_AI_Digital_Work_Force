# ===========================================
# GmailMind Environment Variables
# ===========================================
# Copy this file to .env and fill in your values

# --- OpenAI ---
OPENAI_API_KEY=your_openai_api_key_here

# --- Google OAuth 2.0 ---
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# --- PostgreSQL Database ---
DATABASE_URL=postgresql://postgres:password@localhost:5432/gmailmind
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=gmailmind
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# --- pgvector (Embedding Storage) ---
EMBEDDING_DIMENSION=1536

# --- Redis (Celery Broker) ---
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# --- FastAPI Server ---
APP_HOST=0.0.0.0
APP_PORT=8000
APP_ENV=development
DEBUG=true

# --- Encryption (for storing OAuth tokens) ---
ENCRYPTION_KEY=your_fernet_encryption_key_here

# --- Gmail API ---
GMAIL_SCOPES=https://www.googleapis.com/auth/gmail.readonly,https://www.googleapis.com/auth/gmail.send,https://www.googleapis.com/auth/gmail.modify

# --- Google Calendar ---
GOOGLE_CALENDAR_ID=primary

# --- HubSpot CRM (optional â€” falls back to local DB if blank) ---
HUBSPOT_API_KEY=
HUBSPOT_BASE_URL=https://api.hubapi.com

# --- Twilio / WhatsApp Escalation (optional) ---
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
ESCALATION_WHATSAPP_TO=whatsapp:+1234567890

# --- Slack Escalation (optional) ---
SLACK_WEBHOOK_URL=

# --- JWT / Auth ---
JWT_SECRET=change-me-in-production
JWT_ALGORITHM=HS256

# --- CORS ---
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# --- Safety Limits ---
DAILY_ACTION_LIMIT=200
MAX_RECIPIENTS_PER_SEND=50

# --- Scheduler ---
POLL_INTERVAL_SECONDS=300

# --- Docker Compose Ports (optional overrides) ---
# APP_PORT=8000
# POSTGRES_PORT=5432
# REDIS_PORT=6379
